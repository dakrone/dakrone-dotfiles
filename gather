#!/bin/sh

echo "Gathering dotfiles"

cp -f -v ~/.vimrc .
cp -f -v ~/.zshrc .
#mkdir -p .zsh
#cp -f -rv ~/.zsh/ .
cp -f -v ~/.screenrc .
mkdir -p .vim
cp -f -rv ~/.vim .
mkdir -p .zg
cp -f -v ~/.zg/zg.conf .zg/
cp -f -v ~/.nsmcrc .
cp -f -v ~/.vimperatorrc .
cp -f -v ~/.vromerc .
mkdir -p .vimperator
cp -f -rv ~/.vimperator .
#cp -f -v ~/.gitconfig .
#cp -f -v ~/.gitignore .
mkdir -p .config/irb
cp -f -rv ~/.config/irb .config/
cp -f -v ~/.irbrc .
cp -f -v ~/.autotest .
cp -f -v ~/.config/fish/config.fish .config/fish/
#cp -f -v ~/.newsbeuter/config .newsbeuter/config
cp -f -v ~/bin/putenv .
cp -f -v ~/bin/putvim .
cp -f -v ~/bin/putzsh .
cp -f -v ~/bin/clj .
cp -f -v ~/.clojure.conf .
mkdir -p .clojure
cp -f -v ~/.clojure/user.clj .clojure/

mkdir -p .irssi
cp -f -v ~/.irssi/config .irssi/
cp -f -v ~/.irssi/default.theme .irssi/
cp -f -v ~/.irssi/tzu.theme .irssi/
cp -f -v ~/.tmux.conf .
cp -f -v ~/.config/uzbl/config .config/uzbl/
