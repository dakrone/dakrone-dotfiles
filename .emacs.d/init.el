              nil)
             ((and (bh/is-project-p)
                   (not (marker-buffer org-agenda-restrict-begin))
                   (not (bh/is-project-subtree-p)))
              nil)
             (t
              subtree-end))))
      (save-excursion (org-end-of-subtree t))))

